    "version": "0.2.0",
    "configurations": [
        {
            "name":"(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            // Resolved by CMake Tools:
            "program": "${command:cmake.launchTargetPath}",
            // "args": [
            //     "--direct",
            //     "--plummer", "650000", "--snapname", "data/plummer_snap_mpi", 
            //     "--snapiter", "0.0625", "-T", "0.25", "-dt", "0.0625", "--eps", "0.05"            ],
            "args": [
                "--direct",
                "--plummer", "6500", "--snapname", "data/plummer_snap_mpi", 
                "--snapiter", "0.0625", "-T", "0.25", "-dt", "0.0625", "--eps", "0"            ],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "PATH",
                    "value": "$PATH:$HOME/some_path",
                },
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing in gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": false
                }
            ]
        }

    ]
}